{
    "main() template": {
        "prefix": "main",
        "body": ["int main(int argc, char *argv[]) {$0", "\treturn 0;", "}"],
        "description": "Standard main() snippet"
    },
    "#include <...>": {
        "prefix": "#inc<",
        "body": ["#include <$0>"],
        "description": "#include <...> snippet"
    },
    "#include \"...\"": {
        "prefix": "#inc\"",
        "body": ["#include \"$0\""],
        "description": "#include \"...\" snippet"
    },
    "include once": {
        "prefix": "#once",
        "body": [
            "#ifndef ${1:FILE_H}",
            "#define $1",
            "",
            "$0",
            "",
            "#endif /* end of include guard: $1 */"
        ],
        "description": "Header include guard"
    },
    "extern C": {
        "prefix": "#nocpp",
        "body": [
            "#ifdef __cplusplus",
            "extern \"C\" {",
            "#endif",
            "",
            "$0",
            "",
            "#ifdef __cplusplus",
            "} /* extern \"C\" */",
            "#endif"
        ],
        "description": "Disable C++ name mangling in C headers"
    },
    "switch": {
        "prefix": "switch",
        "body": ["switch ($1) {", "\t$0", "}"],
        "description": "switch"
    },
    "switch case": {
        "prefix": "case",
        "body": ["case $1: {", "\t$0", "} break;"],
        "description": "switch case with scope"
    },
    "printf": {
        "prefix": "printf",
        "body": ["printf(\"${1:%s}\\n\"$2);$0"],
        "description": "printf() snippet"
    }
}
